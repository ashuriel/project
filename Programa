if r2 in r:
    if r2=='a':
        raya()
        correcto('Genial!    +1 punto.')
        raya()
    elif r2=='b' or r2=='c' or r2=='d':
        raya()
        incorrecto('Incorrecto!    -1 punto\n    (En serio...?)')
        raya()
else:
    raya()
    incorrecto('No entiendo tus respuesta...   -1 punto.')
    raya()

contar(5)

